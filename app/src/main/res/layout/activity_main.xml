<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.disper.accelerometer.MainActivity"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <FrameLayout
            android:id="@+id/container_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#def">

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orientation"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txtScaleX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale X"
            android:textSize="22sp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txtScaleY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale Y"
            android:textSize="22sp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txtScaleZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale Z"
            android:textSize="22sp"
            android:padding="10dp"/>
    </LinearLayout>


</LinearLayout>
